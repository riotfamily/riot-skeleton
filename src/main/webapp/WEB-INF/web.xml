<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
  version="3.1">
        
    <!-- Config locations for the application context -->
    <context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			classpath*:/META-INF/riot/application-context.xml,
			/WEB-INF/application.xml
		</param-value>
	</context-param>
	
	<!-- Servlet filter to use UTF-8 for request and responses -->
	<filter>
		<filter-name>encoding-filter</filter-name>
		<filter-class>org.riotfamily.common.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>utf-8</param-value>
		</init-param>
		<init-param>
			<param-name>forceRequestEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
		<init-param>
			<param-name>forceResponseEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>

	<filter>
		<filter-name>riot-filter</filter-name>
		<filter-class>org.riotfamily.common.web.filter.PluginFilter</filter-class>
	</filter>
	
	<filter>
		<filter-name>website-filter</filter-name>
		<filter-class>org.riotfamily.common.web.filter.PluginFilter</filter-class>
		<init-param>
			<param-name>exclude</param-name>
			<param-value>/riot/**</param-value>
		</init-param>
	</filter>
			
	<filter-mapping>
		<filter-name>encoding-filter</filter-name>
		<url-pattern>/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>FORWARD</dispatcher>
	</filter-mapping>
		
	<filter-mapping>
		<filter-name>riot-filter</filter-name>
		<servlet-name>riot</servlet-name>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>FORWARD</dispatcher>
	</filter-mapping>

	<filter-mapping>
		<filter-name>website-filter</filter-name>
		<servlet-name>website</servlet-name>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>FORWARD</dispatcher>
	</filter-mapping>
	
	<listener>
		<listener-class>org.riotfamily.common.log4j.Log4jProfileConfigListener</listener-class>
	</listener>
		
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	
	<!-- DispatcherServlet for the website  -->
	<servlet>
		<servlet-name>website</servlet-name>
		<servlet-class>org.riotfamily.common.web.mvc.servlet.ReloadableDispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>
				classpath*:/META-INF/riot/website-servlet.xml,
				/WEB-INF/website.xml
			</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<!-- DispatcherServlet for the Riot backoffice  -->
	<servlet>
		<servlet-name>riot</servlet-name>
		<servlet-class>org.riotfamily.common.web.mvc.servlet.ReloadableDispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>
				classpath*:/META-INF/riot/riot-servlet.xml,
				/WEB-INF/riot.xml
			</param-value>
		</init-param>
		<load-on-startup>2</load-on-startup>
	</servlet>
	
	<!-- Riot is mapped to /riot/* -->
	<servlet-mapping>
		<servlet-name>riot</servlet-name>
		<url-pattern>/riot/*</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>website</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>

</web-app>
